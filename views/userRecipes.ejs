<%- include('partials/main-header') -%>

<section class="text-center">
    <h1 class="pb-4"><%- user.displayName %>'s Recipes</h1>
</section>

<section class="row row-cols-1 row-cols-md-3 g-4">
    <% for(let i = 0; i < recipes.length; i++) { %>
    <section class="col">
      <section class="card h-100">
        <img src="<%= recipes[i].image%>" class="card-img-top" alt="...">
        <section class="card-body">
          <h5 class="card-title"><%= recipes[i].name%></h5>
          <a href="/recipe/<%= recipes[i]._id%>" class="btn btn-warning">View Recipe</a>
          <%if(recipes.user == user._id){ %>
          <form
            action="/recipe/deletePost/<%= recipe.id %>?_method=DELETE"
            method="POST"
            class="col-3">
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        </section>
        <section class="card-footer">
          <span class="badge rounded-pill bg-black"><a href="/categories" style="text-decoration:none; color:white"><%= recipes[i].category%></a></span>
        </section>
      </section>
    </section>
    <% } %>
  </section>

  <%- include('partials/footer') -%>