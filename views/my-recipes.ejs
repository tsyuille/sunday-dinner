<%- include('partials/main-header') -%>

<section class="text-center">
    <h1 class="pb-4">My Recipes</h1>
</section>

<section class="row row-cols-1 row-cols-md-3 g-4">
    <% for(let i = 0; i <recipes.length; i++) {%>
    <section class="col">
      <section class="card h-100">
        <img src="<%= recipes[i].image%>" class="card-img-top" alt="...">
        <section class="card-body">
          <h5 class="card-title"><%= recipes[i].name%></h5>
          <a href="/recipe/<%= recipes[i]._id%>" class="btn btn-primary">View Recipe</a>
          <!-- <a href="/recipe/<%= recipe[i]._id%>" class="btn btn-primary">Edit</a> -->
          <%if(recipes.user == user.id){ %>
          <form
            action="/recipe/deletePost/<%= recipe.id %>?_method=DELETE"
            method="POST"
            class="col-3">
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        </section>
        <section class="card-footer">
          <span class="badge rounded-pill bg-primary"><%= recipes[i].category%></span>
        </section>
      </section>
    </section>
    <% } %>
  </section>

  <%- include('partials/footer') -%>